<div class="col-8">
  <h1><%= @friend.full_name %>'s Exercises</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Duration (min)</th>
        <th>Distance</th>
        <th>Activity Date</th>
      </tr>
    </thead>
    <tbody>
      <%= @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.duration_in_minutes %></td>
          <td><%= exercise.workout %></td>
          <td><%= exercise.workout_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<div class="col-4">
  <%= content_tag :div, "", id: "chart", data: { workouts: @exercises } %>
  <br/>
  <%= link_to "Back", user_exercises_path(current_user), class: "btn btn-success link" %>
</div>